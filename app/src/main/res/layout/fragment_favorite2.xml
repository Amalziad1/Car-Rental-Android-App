<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
    android:layout_width="380dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    tools:context=".ui.favorites.FavoriteFragment2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favCons"
        android:layout_width="380dp"
        android:layout_height="230dp"
        android:background="@drawable/rounded_fragment_layout">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#79A39F"
            android:drawableLeft="@drawable/calendar_month"
            android:text="Reserve"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/cImage"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="#79A39F"
            android:drawableLeft="@drawable/favorite"
            android:text="Remove"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/cImage"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <ImageView
            android:id="@+id/cImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/placeholder_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/carNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="68dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cImage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>